@import 'nib'
@import 'jeet'

global-reset()

*
  box-sizing border-box

html, body
  height 100%

body
  background-color black
  color #eee
  font-family 'Source Sans Pro', sans-serif
  background url('http://i.imgur.com/UoEido3.jpg')
  
h1
  margin 100px 0 20px 0
  font-size 6em
  +below(600px)
    margin 10px 0 10px 0
    font-size 4em
  
h2
  margin 10px 0 100px 0
  font-size 2.4em
  +below(600px)
    margin 8px 0 50px
    font-size 2em
  
h3
  font-size 1.8em
  margin-bottom 10px

#wrapper
  position relative
  height 100%
  background rgba(0,0,0,0.9)

.container
  max-width 1000px
  margin 0 auto
  
.grid
  cf()
  padding 8px
  
.grid
  p
    +below(600px)
     font-size 0.8em

.col-1-4
  col(1/4)
  height 200px
    
.left
  float left
  
.right
  float right
  
footer
  width 100%
  height 80px
  position absolute
  bottom 0
  background silver
  color black
  padding-top 25px
  font-size 1.3em
  +below(600px)
    font-size 1em

  
  
